# Existing webhook configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Gmail API Configuration
GMAIL_SENDER_EMAIL=your-email@gmail.com
# Default recipient (optional - can be overridden by payload)
GMAIL_RECIPIENT_EMAIL=default-recipient@gmail.com

# OAuth2 Credentials (for personal Gmail accounts)
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# Service Account (alternative to OAuth2 for G Workspace accounts)
# GMAIL_SERVICE_ACCOUNT_FILE=service-account.json

# Email Settings
EMAIL_ENABLED=true
EMAIL_SUBJECT_PREFIX=TMK Alert

# Agent-specific email routing (optional)
# Format: AGENT_EMAIL_{AGENT_ID_UPPERCASE_WITH_UNDERSCORES}=email@domain.com
# Example: AGENT_EMAIL_JOHN_DOE=john.doe@company.com
# Example: AGENT_EMAIL_AGENT001=agent001@company.com